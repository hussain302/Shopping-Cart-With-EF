@model OrderViewModel

<div class="container">
    <partial name="_Notification">
        <br />
        <div class="text-center bg-secondary">
            <br />
            <h1 class="display-4"> @ViewData["Title"] Product </h1>
            <a asp-action="Manage" class="btn btn-info">Manage <i class="fa fa-arrow-left"></i></a>
            <br />
            <br />
        </div>
        <div class="mt-5">
            <form asp-controller="Order" asp-action="UpdateOrder" method="post">
                <input hidden="hidden" asp-for="Order.OrderId" />
                <fieldset>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Products</label>
                        <input type="text" asp-for="Order.ProductNames" class="form-control"
                               id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Products">
                        <small>Products are seprated by comma (,) </small>
                    </div>

                    <div class="form-group">
                        <label for="example1" class="form-label mt-4">Set Order Status</label>
                        <select class="form-control" asp-for="Order.OrderStatus">
                            <option disabled value=""> - Set Order Status-  </option>
                            <option value="pending"> Pending </option>
                            <option value="in process"> In-Process </option>
                            <option value="shipping"> Shipping </option>
                            <option value="completed"> Completed </option>

                        </select>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="Display" class="form-label mt-4">Ordered On</label>
                                <input type="date" asp-for="Order.OrderDate" class="form-control" id="Display"
                                       aria-describedby="emailHelp">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="Price" class="form-label mt-4">Total Price</label>
                                <input type="number" min="0" asp-for="Order.Total" class="form-control" id="Price"
                                       aria-describedby="emailHelp" placeholder="Enter Product Price">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label mt-4">Fullname</label>
                                <input type="text" asp-for="Order.CustomerName" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" required="required" placeholder="Enter Customer Name">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
                                <input type="text" asp-for="Order.CustomerEmail" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" required="required" placeholder="Enter Customer Email">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label mt-4">Phone</label>
                                <input type="text" asp-for="Order.CustomerPhone" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" required="required" placeholder="Enter Phone number">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-9">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label mt-4">Street</label>
                                <input type="text" asp-for="Order.Street" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" required="required" placeholder="Enter Street">
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label mt-4">Zip Code</label>
                                <input type="text" asp-for="Order.PostalCode" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" required="required" placeholder="Enter Zip Code">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label mt-4">City</label>
                                <input type="text" asp-for="Order.City" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" required="required" placeholder="Enter City">
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label mt-4">Province</label>
                                <input type="text" asp-for="Order.Province" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" required="required" placeholder="Enter Province">
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="form-label mt-4">Country</label>
                                <input type="text" asp-for="Order.Country" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" required="required" placeholder="Enter Country">
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 mb-5 text-center">
                        <button type="submit" class="btn btn-primary">Update Order</button>
                    </div>
                </fieldset>
            </form>
        </div>
</div>