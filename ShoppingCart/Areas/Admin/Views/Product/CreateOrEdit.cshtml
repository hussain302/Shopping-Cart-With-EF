@model ProductViewModel

<div class="container">
    <partial name="_Notification">
        <br />
        <div class="text-center bg-secondary">
            <br />
            <h1 class="display-4"> @ViewData["Title"] Product </h1>
            <a  asp-action="Manage" class="btn btn-info">Manage <i class="fa fa-arrow-left"></i></a>
            <br />
            <br />
        </div>
        <div class="mt-5">
            <form asp-action="CreateOrEdit" method="POST" enctype="multipart/form-data">
                <input hidden="hidden" asp-for="Product.Id" />
                <fieldset>
                    <legend> Enter data </legend>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Product Name</label>
                        <input type="text" asp-for="Product.Name" class="form-control"
                        id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Product Title">
                    </div>
                    <div class="form-group">
                        <label for="example1" class="form-label mt-4">Select Category</label>                        
                        <select class="form-control" asp-for="Product.CategoryId">
                            <option value=""> - Select Category-  </option>
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value="@item.Id"> @item.Name </option>
                            }
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="Price" class="form-label mt-4">Price</label>
                        <input type="number" min="0" asp-for="Product.Price" class="form-control" id="Price" 
                        aria-describedby="emailHelp" placeholder="Enter Product Price">
                    </div>

                    <div class="form-group">
                        <label for="Display" class="form-label mt-4">Display Order</label>
                        <input type="number" asp-for="Product.DisplayOrder" class="form-control" id="Display" 
                        aria-describedby="emailHelp" placeholder="Enter Display Order">
                    </div>
                    
                    <div class="form-group">
                        <label for="Description" class="form-label mt-4">Description</label>
                        <textarea rows="3" asp-for="Product.Description "
                                  class="form-control" id="Description" aria-describedby="emailHelp"
                                  placeholder="Enter Product Description">
                        </textarea>
                    </div>

                    <div class="form-group">
                        <label for="image" class="form-label mt-4">Image</label>
                        <input type="file" asp-for="PhotoFile" class="form-control" id="exampleInputEmail1"
                               aria-describedby="emailHelp" placeholder="No File Choosen">
                    </div>

                    <div class="mt-3 text-center">
                        <button type="submit" class="@ViewData["button-color"]">@ViewData["Title"]</button>
                    </div>
                </fieldset>
            </form>
        </div>
</div>