@model UserViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

<div class="container">

    <div class="text-center text-white mt-2 mb-2 p-3 bg-primary">
        <h1 class="display-4"> @ViewData["Title"] Admin </h1>
    </div>
    <div class="">
        <partial name="_Notification">
    </div>
    <form asp-area="Admin" asp-controller="User" asp-action="Login" method="post">
        <div class="form-group">
            <div class="form-floating mb-3">
                <input asp-for="User.Username" type="text" class="form-control" required id="floatingInput" placeholder="example:Hussain302">
                <label for="floatingInput">Username</label>
            </div>

            <div class="form-floating">

                <input asp-for="User.Password" type="password" required class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>
            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-primary"> Login </button> | Don't have an account? <small> <a asp-area="Admin" asp-controller="User" asp-action="Register">Create</a> </small>
            </div>
        </div>
    </form>

</div>