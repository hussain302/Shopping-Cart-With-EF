@model UserViewModel
@{
    ViewData["Title"] = "Manage";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <partial name="_Notification">
        <br />
        <div class="text-center bg-secondary">
            <br />
            <h1 class="display-4"> @ViewData["Title"] Users</h1>
            <a asp-area="Admin" asp-controller="User" asp-action="CreateOrEdit" class="btn btn-info">Add User</a>
            <br />
            <br />
        </div>
        <div class="mt-5">
            @if (Model.Users.Count() != 0)
            {
                <table class="table table-borderless table-striped">
                    <thead class="bg-secondary text-white">
                        <tr>
                            <th> Username </th>
                            <th> Fullname </th>
                            <th> Role  </th>
                            <th> Status  </th>
                            <th> Created  </th>
                            <th> Updated  </th>
                            <th> Deleted  </th>
                            <th> Actions </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            @if(item.Role.ToLower() != "super admin")
                           {
                               <tr>
                                <th> @item.Username </th>
                                <td> @item.FullName </td>
                                <td> @item.Role </td>

                                @if (@item.IsApproved)
                                {
                                    <td class="text-success">Approved</td>
                                }
                                else
                                {
                                    <td class="text-danger">Not Approved</td>
                                }
                                @if (!string.IsNullOrWhiteSpace(item.CreatedBy))
                                {
                                    <td> @item.CreatedBy / @item.CreatedOn </td>
                                }
                                else
                                {
                                    <td> - </td>
                                }
                                @if (!string.IsNullOrWhiteSpace(item.ModifiedBy))
                                {
                                    <td> @item.ModifiedBy / @item.ModifiedOn </td>
                                }
                                else
                                {
                                    <td> - </td>
                                }
                                @if (!string.IsNullOrWhiteSpace(item.DeletedBy))
                                {
                                    <td> @item.DeletedBy / @item.DeleteddOn </td>
                                }
                                else
                                {
                                    <td> - </td>
                                }

                                <td>
                                    <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="User" asp-action="Approve" asp-route-id="@item.UserId">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                        </svg>
                                    </a>
                                    <a class="btn btn-outline-warning" asp-area="Admin" asp-action="CreateOrEdit" asp-controller="User" asp-route-id="@item.UserId">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>
                                    <a class="btn btn-outline-danger" asp-area="Admin" asp-action="Delete" asp-controller="User" asp-route-id="@item.UserId">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center">
                    <h2 class="display-5"> No Record Found </h2>
                </div>
            }
        </div>
</div>