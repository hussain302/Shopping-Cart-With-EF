@{
    ViewData["Title"] = "Home";
}

<div class="mt-3">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/layoutimages/banner.webp" class="d-block w-100" alt="First slide">
            </div>
            <div class="carousel-item">
                <img src="~/images/layoutimages/eid-slider-banner.webp" class="d-block w-100" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img src="~/images/layoutimages/banner2.webp" class="d-block w-100" alt="Third slide">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<section class="hero-section mt-5">
    <div class="">
        <div class="row">
            <div class="text-center col-md-6 mt-5">
                <h1 class="display-3 mt-5">Discover the Latest Fashion Trends</h1>
                <h3 class="mt-5 display-5 text-uppercase">Shop our collection of stylish clothing for men and women</h3>
                <a href="#" class="mt-5 btn btn-primary mb-3">Shop Now</a>
            </div>
            <div class="col-md-6">
                <img src="~/images/layoutimages/more-to-explore_new.png" alt="Fashion Trends" class="img-fluid">
            </div>
        </div>
    </div>
</section>


@if (ViewBag.TopWomen.Count != 0)
{
    <section class="products-section">
        <div class=" mt-5">
            <div class="text-center text-dark text-uppercase p-2 mb-2">
                <h2 class="display-3"><b>Our Top Women Collection</b></h2>
            </div>
            <div class="row">            
                @foreach (var item in ViewBag.TopWomen)
                {
                    <div class="col-md-4 mt-1">
                        <div class="card">
                            <img src="~/images/Products/@item.ImageUrl" alt="Product Image" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <h4 class="card-text text-muted"> <b>RS:@item.Price\- </b> </h4>
                                <a href="#" class="btn btn-primary">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
