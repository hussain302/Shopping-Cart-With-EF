@model Order
@{
    ViewData["Title"] = "Checkout";
}

<div class="my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="text-center mb-5">@ViewData["Title"] </h1>

            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center display-4"> Enter Shipping Details </h1>
                </div>
            </div>

            <form asp-action="Order" asp-controller="Cart" asp-area="Customer" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Full name</label>
                    <input type="text" required asp-for="CustomerName" class="form-control" id="name" placeholder="Enter Your Full Name">
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">Email Address</label>
                    <input type="email" required asp-for="CustomerEmail" class="form-control" id="Email" placeholder="Enter Your Email Address">
                </div>

                <div class="mb-3">
                    <label for="Phone" class="form-label">Phone</label>
                    <input type="text" required asp-for="CustomerPhone" class="form-control" id="Phone" placeholder="Enter Your Phone">
                </div>
                
                <div class="mb-3">
                        <label for="Street" class="form-label">Street</label>
                    <input type="text" required asp-for="Street" class="form-control" id="Streat" placeholder="Enter Your Street">
                    </div>

                <div class="row">
                    <div class="mb-3 col-6">
                        <label for="City" class="form-label">City</label>
                        <input type="text" required asp-for="City" class="form-control" id="name" placeholder="Enter Your City">
                    </div>

                    <div class="mb-3 col-6">
                        <label for="Streat" class="form-label">Province</label>
                        <input type="text"  required asp-for="Province" class="form-control" id="Province"  placeholder="Enter Your Province">
                    </div>

                    <div class="mb-3 col-6">
                        <label for="Country" class="form-label">Country</label>
                        <input type="text" required asp-for="Country" class="form-control" id="Country" placeholder="Enter Your Country">
                    </div>

                    <div class="mb-3 col-6">
                        <label for="PostalCode" class="form-label">Postal Code</label>
                        <input type="text" required asp-for="PostalCode" class="form-control" id="PostalCode" placeholder="Enter Your Postal Code">
                    </div>
                </div>

                <div class="row">

                    <div class="mb-3 col-6">
                        <label for="OrderDate" class="form-label">Order Date</label>
                        <input type="text" value="@Model.OrderDate.ToString("MMM dd, yyyy")" disabled class="form-control" id="OrderDate" name="OrderDate" placeholder="Order Date">
                    </div>

                    <div class="mb-3 col-6">
                        <label for="Total" class="form-label">Total</label>
                        <input type="number" asp-for="Total" disabled class="form-control" id="Total" name="Total" placeholder="Enter your Total">
                    </div>
                </div>
                                
                <div class="text-center">
                    <button type="submit" class="btn btn-danger">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>